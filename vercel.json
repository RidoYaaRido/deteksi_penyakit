{
  "version": 2,
  "builds": [
    {
      "src": "BE/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "FE/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd FE && npm install && chmod +x ./node_modules/.bin/vue-cli-service && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "BE/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/FE/dist/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
