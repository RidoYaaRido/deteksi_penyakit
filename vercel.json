{
  "version": 2,
  "builds": [
    {
      "src": "BE/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "FE/package.json",
      "use": "@vercel/static-build",
      "config": {
        // Ganti perintah instalasi yang standar:
        // PENTING: Pindah ke direktori FE untuk instalasi
        "installCommand": "npm install --prefix FE", 
        
        // Ganti perintah build yang standar:
        // PENTING: Pindah ke direktori FE untuk build
        "buildCommand": "npm run build --prefix FE"
      }
    }
  ],
  "routes": [
    // Route API (backend)
    {
      "src": "/api/(.*)",
      "dest": "BE/app.py"
    },
    // Route Frontend (file statis)
    {
      // Output build Vue CLI default adalah 'dist' di dalam folder FE
      "src": "/(.*)",
      "dest": "/FE/dist/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
